{
  "name": "@dschau/create-gatsby-blog-post",
  "description": "A utility to create a gatsby blog post",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dschau/create-gatsby-blog-post"
  },
  "license": "MIT",
  "bin": {
    "create-post": "cli.js"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prebuild": "del-cli \"dist/**/*\"",
    "prepublishOnly": "npm run build && cp ./package.json dist/package.json && cd dist",
    "build": "tsc",
    "prettier": "prettier --single-quote --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "date-fns": "~1.28.5",
    "lodash.capitalize": "~4.2.1",
    "lodash.kebabcase": "~4.1.1",
    "mz": "~2.6.0",
    "mz-modules": "~1.0.0",
    "yargs": "~8.0.2"
  },
  "devDependencies": {
    "@types/jest": "~20.0.2",
    "@types/node": "~8.0.9",
    "del-cli": "~1.1.0",
    "husky": "~0.14.3",
    "jest": "~20.0.4",
    "lint-staged": "~4.0.1",
    "prettier": "~1.5.2",
    "ts-jest": "~20.0.7",
    "typescript": "~2.4.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
